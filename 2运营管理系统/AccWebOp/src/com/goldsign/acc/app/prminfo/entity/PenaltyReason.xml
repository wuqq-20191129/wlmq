<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goldsign.acc.app.prminfo.mapper.PenaltyReasonMapper">
    <resultMap type="PenaltyReason" id="rmPenaltyReason">
        
        <result column="penalty_id" property="penalty_id" /> 
        <result column="penalty_name" property="penalty_name" />
        <result column="delete_flag" property="delete_flag" />
    </resultMap>

    
     
    <select id="getPenaltyReason"  parameterType="PenaltyReason" resultMap="rmPenaltyReason">
        select penalty_id,penalty_name from W_ACC_ST.W_ST_COD_PENALTY_REASON where 1=1
        <if test="penalty_id !=null and penalty_id !=''">
            and penalty_id =#{penalty_id} 
        </if>
        <if test="penalty_name !=null and penalty_name !=''">
            or penalty_name =#{penalty_name} 
        </if>
        order by penalty_id
    </select>
    
    <select id="getPenaltyReasonById"  parameterType="PenaltyReason" resultMap="rmPenaltyReason">
        select penalty_id,penalty_name from W_ACC_ST.W_ST_COD_PENALTY_REASON where penalty_id=#{penalty_id}        
    </select>
    
    <select id="getPenaltyReasonByName"  parameterType="PenaltyReason" resultMap="rmPenaltyReason">
        select penalty_id,penalty_name from W_ACC_ST.W_ST_COD_PENALTY_REASON where penalty_name=#{penalty_name}  
        <if test="penalty_id !=null and penalty_id !=''">
            and penalty_id !=#{penalty_id} 
        </if>
    </select>
    
    <insert id="addPenaltyReason" parameterType="PenaltyReason" >
        insert into W_ACC_ST.W_ST_COD_PENALTY_REASON(penalty_id,penalty_name,delete_flag)
        values(#{penalty_id},#{penalty_name},#{delete_flag})               
    </insert>
    
    <update id="modifyPenaltyReason" parameterType="PenaltyReason" >
        update W_ACC_ST.W_ST_COD_PENALTY_REASON set penalty_name=#{penalty_name}  where penalty_id=#{penalty_id}                                                 
    </update>
    
    <delete id="deletePenaltyReason" parameterType="PenaltyReason">
            delete from W_ACC_ST.W_ST_COD_PENALTY_REASON where penalty_id=#{penalty_id}          
    </delete>     
    
</mapper>
