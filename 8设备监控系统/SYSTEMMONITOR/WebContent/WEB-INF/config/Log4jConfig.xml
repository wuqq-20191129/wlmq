<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="fileLogging" class="org.apache.log4j.FileAppender">
		<param name="File"   value="sysmonitor.log" />
    <param name="Append" value="false" />
    <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>
    </layout>
	</appender>

	<appender name="consoleLogging" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c : %m%n"/>
    </layout>
	</appender>

	<root>
	  <priority value ="info" />
   	   
		<appender-ref ref="fileLogging" />
   	<appender-ref ref="consoleLogging" />
	</root>
</log4j:configuration>
