    <bean id="dataSourceMN" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close"
          p:driverClassName="oracle.jdbc.driver.OracleDriver"
          p:url="jdbc:oracle:thin:@172.20.19.29:1521:wacc"
          p:username="w_acc_mn_app" p:password="w_acc_mn_app"
          p:maxActive="10" p:maxIdle="10"
          p:validationQuery="select 1 from dual"
          p:testWhileIdle="true">
    </bean>
    <bean id="dataSourceUtil" class="com.goldsign.acc.frame.util.DataSourceUtil">
        <property name="defaultTargetDataSource" ref="dataSourceST"></property>
        <property name="targetDataSources">
            <map key-type="java.lang.String">
                <entry key="dataSourceST" value-ref="dataSourceST"></entry>
                <entry key="dataSourceHCE" value-ref="dataSourceHCE"></entry>
                <entry key="dataSourceMN" value-ref="dataSourceMN"></entry>
            </map>
        </property>

    </bean>
    <!-- 清算 运营数据库事务-->
    <bean id="transactionManagerST" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSourceUtil"/>
    </bean>

    <!--   清算 运营数据库事务支持注解  -->
    <tx:annotation-driven transaction-manager="transactionManagerST"/>

